//welcoming styles
/*=====================================================
Variables to tweak the style 
=====================================================*/
welcoming-spacing-top = 90px
welcoming-outro-to-signature-gap = 20px
welcoming-spacing-bottom = 70px

/*=====================================================
The Serious Stuff
=====================================================*/
#welcoming-intro-content
    margin-top welcoming-spacing-top
    line-height 170%
    h1
        @extends .cd-alone-text
        font-size: 12pt
        text-transform: none
        font-weight bold
        text-align center
        letter-spacing: 2.5pt
        margin-bottom 7px
    p
        @extends .cd-alone-text
        font-size: 12pt
        text-align center
        max-width: 600px
        margin auto
        letter-spacing 1.8pt
        margin-bottom 50px
    
    #welcoming-image
        border-radius 50%
        max-height 330px
        max-width calc(100% - 30px)
        margin auto
        margin-top 60px
        display block
        // border solid 3px cd-hellgrau
        box-shadow: 0px 0px 6px #000


#welcoming-outro-content
    p
        @extends .cd-alone-text
        font-size: 12pt
        text-align center
        letter-spacing 1.8pt
    p.welcoming-signature
        font-size 12pt
        letter-spacing 2pt
        margin-top welcoming-outro-to-signature-gap
        text-align: center
        margin-bottom welcoming-spacing-bottom
