    font-size: 17pt
    // letter-spacing: 3.4pt
    text-transform: uppercase
// H2 Headline 15pt Laufweite 200
h2
    font-size: 15pt
    letter-spacing: 3pt
// H3 Subline 14pt Laufweite 100
h3
    font-family: 'OpenSansLight'
    font-size: 14pt
    letter-spacing: 1.4pt
// Text 12pt Laufweite 0
p
    font-size: 12pt
    letter-spacing: normal
// Notes 7pt Laufweite 100
p.notes
    font-size: 7pt
    letter-spacing: 0.7pt


.cd-title
    font-size 13pt
    letter-spacing: 2pt

.cd-text
    font-size 10pt
    letter-spacing: 0.5pt
    line-height: 140%

.cd-alone-text
    font-size 11pt
    letter-spacing: 0.5pt
    line-height: 140%


