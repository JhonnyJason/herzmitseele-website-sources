


/*==========================================================
Global variables and styles
==========================================================*/
max-content-width = 950px
inner-content-width = 750px
mobile-side-padding = 10px

decoration-sun-url = url("/img/decoration-sun.svg")

service-theme-color = #fff // to stop error should be overwritten

/*==========================================================
CD global font styles
==========================================================*/
@font-face 
    font-family: "OpenSans"
    src: url("/fonts/OpenSans-Regular.ttf")
@font-face 
    font-family: "OpenSansLight"
    src: url("/fonts/OpenSans-Light.ttf")


body
    color: #575756
    width 100%
    font-family: 'OpenSans'
    line-height: 150%

/*==========================================================
CD font styles
==========================================================*/
// H1 HEADLINE 17pt Laufweite 200
h1
    font-size: 17pt
    letter-spacing: 3.4pt
    text-transform: uppercase
// H2 Headline 15pt Laufweite 200
h2
    font-size: 15pt
    letter-spacing: 3pt
// H3 Subline 14pt Laufweite 100
h3
    font-family: 'OpenSansLight'
    font-size: 14pt
    letter-spacing: 1.4pt
// Text 12pt Laufweite 0
p
    font-size: 12pt
    letter-spacing: normal
// Notes 7pt Laufweite 100
p.notes
    font-size: 7pt
    letter-spacing: 0.7pt


.cd-title
    font-size 13pt
    letter-spacing: 2pt

.cd-text
    font-size 10pt
    letter-spacing: 0.5pt
    line-height: 140%

.cd-alone-text
    font-size 11pt
    letter-spacing: 0.5pt
    line-height: 140%


/*==========================================================
CD color variables
==========================================================*/
cd-hellgrau = #d0d0d0
cd-anthrazit = #575756
cd-sand = #d8cdc3
cd-dust = #ece6e0
cd-bluegrey = #91b6bc
cd-altrosa = #e3a2ab

/*==========================================================
Global Element Style
==========================================================*/
.inner-content
    margin auto
    max-width: inner-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding

.max-content
    margin auto
    max-width: max-content-width
    padding-left: mobile-side-padding
    padding-right: mobile-side-padding


paddingless-max-content-width = (max-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-max-content-width)
    .max-content
        padding-left: 0
        padding-right: 0

paddingless-inner-content-width = (inner-content-width + (2 * mobile-side-padding))
@media screen and (min-width: paddingless-inner-content-width)
    .inner-content
        padding-left: 0
        padding-right: 0
