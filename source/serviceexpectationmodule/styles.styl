//serviceexpectation section styles
/*=====================================================
Variables to tweak the style 
=====================================================*/
day-to-cost-expecation-gap = 70px
title-to-day-expectation-gap = 30px

cost-title-spacing = 45px
cost-expecation-outer-border-width = 2px
cost-expectation-bottom-padding = 60px
cost-hint-side-padding = 20px

card-title-to-subtitle-gap = 20px
card-subtitle-height = 90px
card-paragraph-gap = 20px

cost-duration-margin-top = 30px
cost-duration-decoration-space = 50px
cost-duration-decoration-size = 20px

decoration-image-url = decoration-sun-url

/*=====================================================
Serious Stuff 
=====================================================*/
#expectationofday
    h3
        @extends h1
        @extends .cd-title
        color service-theme-color
        font-weight bold
        margin-bottom title-to-day-expectation-gap
        text-align center
        letter-spacing: normal
    
    p
        @extends .cd-text
        line-height: 150%
        text-align center

#expectationofcost
    position relative
    box-sizing: border-box
    margin-top day-to-cost-expecation-gap
    // border solid cost-expecation-outer-border-width service-theme-color
    border-radius: 5px
    // border-radius: 20px
    box-shadow: 0 0 5px alpha(black, 0.2)
    background-color alpha(service-theme-color, 0.1)

    > h1
        font-size 15pt
        text-align center
        padding-top cost-title-spacing
        padding-bottom cost-title-spacing
        margin 0
    p
        padding 0 20px
        max-width 600px
        margin auto
#expectation-cost-hint
    width 100%
    position absolute
    bottom cost-hint-side-padding
    right: cost-hint-side-padding
    p
        @extends p.notes
        text-align right
        line-height: 120%

        
#expectation-cost-cards
    padding-bottom cost-expectation-bottom-padding
    text-align center
    h2
        @extends h1
        font-family: "OpenSans"
        color: service-theme-color
        font-weight bold
        padding 0
        margin 0
        margin-bottom card-title-to-subtitle-gap
        font-size 13pt
        letter-spacing: 0.7pt
    h3
        @extends h2
        max-width 300px
        margin auto
        text-align center
        font-weight bold
        font-size 11pt
        letter-spacing: 0.5pt
        line-height: 140%
        height card-subtitle-height
    p
        font-size 11pt
        margin-bottom card-paragraph-gap

    .cost-duration
        @extends p
        font-size 11pt
        text-align center
        font-weight bold
        margin-top cost-duration-margin-top
        padding-top cost-duration-decoration-space
        position relative
    .cost-duration::before
        content ""
        position absolute
        top 0
        left "calc(50% - %s)" % (cost-duration-decoration-size / 2)
        height cost-duration-decoration-size
        width cost-duration-decoration-size
        background-image decoration-image-url
