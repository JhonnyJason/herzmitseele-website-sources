// header styles
#header
    background-color white

    #logo-frame-row
        background-image url("img/logo.svg")
        height 120px
        width 120px
        background-size contain
        background-repeat no-repeat
        background-position center
        margin 20px auto

    #menu
        display: flex
        justify-content: space-between
        max-width: max-content-width
        margin auto
        margin-bottom 20px
    .menu-link
        text-transform: uppercase
        font-size: 17pt
        color cd-hellgrau

    #banner-image-row
        height 320px
        width 100%
        background-color black
        background-position center
        background-size cover
    
    #page-quote-row
        padding 20px 0
        background-color header-color
        width 100%

        h1.page-quote
            color white
            margin auto
            max-width: inner-content-width
            text-align: center
            margin-bottom 10px
        .page-quote-signature
            color white
            text-align center
            width 100%
