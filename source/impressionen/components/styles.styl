//aboutme styles
/*==========================================================
Variables to tweak the style
==========================================================*/
#impressionen-intro
    margin-top 60px

    a
        font-weight: bold
        text-decoration: underline
    p
        @extends .cd-alone-text
        text-align: left
        line-height 170%
        margin-top 12px

#impressionen-gallery
    margin-top 60px
    display grid
    gap 30px
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr))
    grid-auto-rows: 300px

    .gallery-image
        overflow: hidden
        img
            width 300px
            height 300px
            object-fit: cover
            display: block
            margin: auto
