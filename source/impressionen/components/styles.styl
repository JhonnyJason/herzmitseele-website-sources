//aboutme styles
/*==========================================================
Variables to tweak the style
==========================================================*/
#impressionen-intro
    margin-top 60px
    text-align: center
    a
        font-weight: bold
        text-decoration: underline
    p
        @extends .cd-alone-text
        // text-align: left
        line-height 170%
        margin-top 12px

#impressionen-gallery
    margin-top 60px
    display grid
    gap 6px
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr))
    grid-auto-rows: 300px

    .gallery-image
        overflow: hidden

        img
            // width 300px
            // height 300px
            width 100%
            height 100%
            object-fit: cover
            display: block
            margin: auto
            transition: transform 0.3s
            cursor: pointer

        img:hover
            transform: scale(1.1)



#impressionen-gallery.justified-gallery
    gap 0
    // grid-template-columns: repeat(auto-fill, 300px)
    // grid-auto-rows: 300px
    grid-template-columns: repeat(auto-fit, minmax(150px, 1fr))
    grid-auto-rows: 150px
    // grid-template-columns: repeat(auto-fit, minmax(75px, 1fr))
    // grid-auto-rows: 75px
    grid-auto-flow: row dense
    // background-color cd-winered

    .gallery-image
        grid-row span 1
        grid-column: span 1


    // // .gallery-image:nth-child(1n)
    // //     grid-row span 3
    // //     grid-column: span 4

    .gallery-image:nth-child(3n)
        grid-row span 2
        grid-column: span 2

    .gallery-image:nth-child(5n)
        grid-row span 1
        grid-column: span 2

    .gallery-image:nth-child(7n)
        grid-row span 2
        grid-column: span 1


    .gallery-image:nth-child(13n)
        grid-row span 2
        grid-column: span 3

    .gallery-image:nth-child(19n)
        grid-row span 3
        grid-column: span 2

